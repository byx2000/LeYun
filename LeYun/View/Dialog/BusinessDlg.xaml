            <StackPanel Orientation="Horizontal">
                <TextBlock Text="邮箱：" Margin="0 5 0 0" Foreground="#85888b" FontSize="{StaticResource NormalFontSize}"/>
                <TextBox Style="{StaticResource CopyableTextStyle}" Text="1017958063@qq.com" Margin="0 5 0 0" Foreground="#85888b" FontSize="{StaticResource NormalFontSize}"/>
            </StackPanel>
        </StackPanel>
    </Grid>
