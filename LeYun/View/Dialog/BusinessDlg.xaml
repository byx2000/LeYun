            <StackPanel Orientation="Horizontal">
                <TextBlock Text="邮箱：" Margin="0 5 0 0" Foreground="#85888b" FontSize="{StaticResource NormalFontSize}"/>
                <TextBox Style="{StaticResource CopyableTextStyle}" Text="1178990733@qq.com" Margin="0 5 0 0" Foreground="#85888b" FontSize="{StaticResource NormalFontSize}"/>
            </StackPanel>
        </StackPanel>

        <Border BorderBrush="#8b8e91" BorderThickness="0 0 1 0" Margin="0 20 0 20"/>

        <StackPanel Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Center">
